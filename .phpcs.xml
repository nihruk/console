<?xml version="1.0"?>
<ruleset name="IODA" namespace="nihr/ioda">
    <description>The IODA coding standard</description>
    <file>src</file>
    <file>tests/src</file>
    <rule ref="PSR12"/>
    <rule ref="SlevomatCodingStandard.TypeHints.DeclareStrictTypes">
        <properties>
            <property name="spacesCountAroundEqualsSign" value="0"/>
        </properties>
    </rule>
    <rule ref="Squiz.Strings.DoubleQuoteUsage"/>
</ruleset>
